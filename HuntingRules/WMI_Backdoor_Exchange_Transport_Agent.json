{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspace": {
      "type": "String"
    }
  },
  "resources": [
    {
      "type": "Microsoft.OperationalInsights/workspaces/savedSearches",
      "apiVersion": "2020-08-01",
      "name": "[concat(parameters('workspace'), '/WMI_Backdoor_Exchange_Transport_Agent')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "eTag": "*",
        "displayName": "WMI Backdoor Exchange Transport Agent",
        "category": "Hunting Queries",
        "query": "DeviceProcessEvents\n| where InitiatingProcessFolderPath endswith \"\\\\EdgeTransport.exe\" and (not((FolderPath =~ \"C:\\\\Windows\\\\System32\\\\conhost.exe\" or (FolderPath endswith \"\\\\Bin\\\\OleConverter.exe\" and FolderPath startswith \"C:\\\\Program Files\\\\Microsoft\\\\Exchange Server\\\\\"))))",
        "version": 1,
        "tags": [
          {
            "name": "description",
            "value": "Detects a WMI backdoor in Exchange Transport Agents via WMI event filters"
          },
          {
            "name": "tactics",
            "value": "Persistence"
          },
          {
            "name": "relevantTechniques",
            "value": "T1546"
          }
        ]
      }
    }
  ]
}
