{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspace": {
      "type": "String"
    }
  },
  "resources": [
    {
      "apiVersion": "2023-02-01-preview",
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/0bbc6369-43e3-453d-9944-cae58821c173')]",
      "kind": "Scheduled",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/0bbc6369-43e3-453d-9944-cae58821c173')]",
      "properties": {
        "alertRuleTemplateName": "0bbc6369-43e3-453d-9944-cae58821c173",
        "author": "Maxime Thiebaut (@0xThiebaut)",
        "customDetails": null,
        "date": "2021/10/21",
        "description": "Detects using WorkFolders.exe to execute an arbitrary control.exe",
        "displayName": "Execution via WorkFolders.exe",
        "enabled": true,
        "entityMappings": null,
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "logsource": {
          "category": "process_creation",
          "product": "windows"
        },
        "modified": "2022/12/25",
        "query": "DeviceProcessEvents\n| where (FolderPath endswith \"\\\\control.exe\" and InitiatingProcessFolderPath endswith \"\\\\WorkFolders.exe\") and (not(FolderPath =~ \"C:\\\\Windows\\\\System32\\\\control.exe\"))",
        "queryFrequency": "P1D",
        "queryPeriod": "P1D",
        "sentinelEntitiesMappings": null,
        "severity": "high",
        "status": "test",
        "suppressionDuration": "PT5H",
        "suppressionEnabled": false,
        "tactics": null,
        "techniques": [
          "T1218"
        ],
        "templateVersion": "1.0.0",
        "triggerOperator": "GreaterThan",
        "triggerThreshold": 0
      },
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules"
    }
  ]
}
