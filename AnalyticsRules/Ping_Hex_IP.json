{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspace": {
      "type": "String"
    }
  },
  "resources": [
    {
      "apiVersion": "2023-02-01-preview",
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/1a0d4aba-7668-4365-9ce4-6d79ab088dfd')]",
      "kind": "NRT",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/1a0d4aba-7668-4365-9ce4-6d79ab088dfd')]",
      "properties": {
        "alertRuleTemplateName": "1a0d4aba-7668-4365-9ce4-6d79ab088dfd",
        "author": "Florian Roth (Nextron Systems)",
        "customDetails": null,
        "date": "2018/03/23",
        "description": "Detects a ping command that uses a hex encoded IP address",
        "displayName": "Ping Hex IP",
        "enabled": true,
        "entityMappings": null,
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "logsource": {
          "category": "process_creation",
          "product": "windows"
        },
        "modified": "2022/01/07",
        "query": "DeviceProcessEvents\n| where ProcessCommandLine contains \"0x\" and FolderPath endswith \"\\\\ping.exe\"",
        "queryFrequency": "P1D",
        "queryPeriod": "P1D",
        "sentinelEntitiesMappings": null,
        "severity": "high",
        "status": "test",
        "suppressionDuration": "PT5H",
        "suppressionEnabled": false,
        "tactics": null,
        "techniques": [
          "t1027",
          "t1140"
        ],
        "templateVersion": "1.0.0",
        "triggerOperator": "GreaterThan",
        "triggerThreshold": 0
      },
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules"
    }
  ]
}
