{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspace": {
      "type": "String"
    }
  },
  "resources": [
    {
      "apiVersion": "2023-02-01-preview",
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/bab049ca-7471-4828-9024-38279a4c04da')]",
      "kind": "NRT",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/bab049ca-7471-4828-9024-38279a4c04da')]",
      "properties": {
        "alertRuleTemplateName": "bab049ca-7471-4828-9024-38279a4c04da",
        "author": "Janantha Marasinghe",
        "customDetails": null,
        "date": "2020/09/26",
        "description": "Adversaries can carry out malicious operations using a virtual instance to avoid detection. This rule is built to detect the registration of the Virtualbox driver or start of a Virtualbox VM.",
        "displayName": "Detect Virtualbox Driver Installation OR Starting Of VMs",
        "enabled": true,
        "entityMappings": null,
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "logsource": {
          "category": "process_creation",
          "product": "windows"
        },
        "modified": "2022/07/14",
        "query": "DeviceProcessEvents\n| where (ProcessCommandLine contains \"VBoxRT.dll,RTR3Init\" or ProcessCommandLine contains \"VBoxC.dll\" or ProcessCommandLine contains \"VBoxDrv.sys\") or (ProcessCommandLine contains \"startvm\" or ProcessCommandLine contains \"controlvm\")",
        "queryFrequency": "P1D",
        "queryPeriod": "P1D",
        "sentinelEntitiesMappings": null,
        "severity": "low",
        "status": "test",
        "suppressionDuration": "PT5H",
        "suppressionEnabled": false,
        "tactics": null,
        "techniques": [
          "t1564"
        ],
        "templateVersion": "1.0.0",
        "triggerOperator": "GreaterThan",
        "triggerThreshold": 0
      },
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules"
    }
  ]
}
