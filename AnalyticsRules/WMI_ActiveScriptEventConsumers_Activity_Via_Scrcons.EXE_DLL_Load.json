{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspace": {
      "type": "String"
    }
  },
  "resources": [
    {
      "apiVersion": "2023-02-01-preview",
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/b439f47d-ef52-4b29-9a2f-57d8a96cb6b8')]",
      "kind": "Scheduled",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/b439f47d-ef52-4b29-9a2f-57d8a96cb6b8')]",
      "properties": {
        "alertRuleTemplateName": "b439f47d-ef52-4b29-9a2f-57d8a96cb6b8",
        "author": "Roberto Rodriguez (Cyb3rWard0g), OTR (Open Threat Research)",
        "customDetails": null,
        "date": "2020/09/02",
        "description": "Detects signs of the WMI script host process \"scrcons.exe\" loading scripting DLLs which could indicates WMI ActiveScriptEventConsumers EventConsumers activity.",
        "displayName": "WMI ActiveScriptEventConsumers Activity Via Scrcons.EXE DLL Load",
        "enabled": true,
        "entityMappings": null,
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "logsource": {
          "category": "image_load",
          "product": "windows"
        },
        "modified": "2023/02/22",
        "query": "DeviceImageLoadEvents\n| where (FolderPath endswith \"\\\\vbscript.dll\" or FolderPath endswith \"\\\\wbemdisp.dll\" or FolderPath endswith \"\\\\wshom.ocx\" or FolderPath endswith \"\\\\scrrun.dll\") and InitiatingProcessFolderPath endswith \"\\\\scrcons.exe\"",
        "queryFrequency": "P1D",
        "queryPeriod": "P1D",
        "sentinelEntitiesMappings": null,
        "severity": "medium",
        "status": "test",
        "suppressionDuration": "PT5H",
        "suppressionEnabled": false,
        "tactics": [
          "persistence"
        ],
        "techniques": [
          "t1546"
        ],
        "templateVersion": "1.0.0",
        "triggerThreshold": 0
      },
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules"
    }
  ]
}
