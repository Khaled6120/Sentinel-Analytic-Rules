{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspace": {
      "type": "String"
    }
  },
  "resources": [
    {
      "apiVersion": "2023-02-01-preview",
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/06b401f4-107c-4ff9-947f-9ec1e7649f1e')]",
      "kind": "NRT",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/06b401f4-107c-4ff9-947f-9ec1e7649f1e')]",
      "properties": {
        "alertRuleTemplateName": "06b401f4-107c-4ff9-947f-9ec1e7649f1e",
        "author": "Victor Sergeev, oscd.community",
        "customDetails": null,
        "date": "2020/10/09",
        "description": "Detects execution of \"ftp.exe\" script with the \"-s\" or \"/s\" flag and any child processes ran by \"ftp.exe\".",
        "displayName": "Potential Arbitrary Command Execution Via FTP.EXE",
        "enabled": true,
        "entityMappings": null,
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "logsource": {
          "category": "process_creation",
          "product": "windows"
        },
        "modified": "2024/04/23",
        "query": "DeviceProcessEvents\n| where InitiatingProcessFolderPath endswith \"\\\\ftp.exe\" or ((ProcessCommandLine contains \"-s:\" or ProcessCommandLine contains \"/s:\") and (FolderPath endswith \"\\\\ftp.exe\" or ProcessVersionInfoOriginalFileName =~ \"ftp.exe\"))",
        "queryFrequency": "P1D",
        "queryPeriod": "P1D",
        "sentinelEntitiesMappings": null,
        "severity": "medium",
        "status": "test",
        "suppressionDuration": "PT5H",
        "suppressionEnabled": false,
        "tactics": [
          "execution"
        ],
        "techniques": [
          "t1059",
          "t1202"
        ],
        "templateVersion": "1.0.0",
        "triggerOperator": "GreaterThan",
        "triggerThreshold": 0
      },
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules"
    }
  ]
}
