{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspace": {
      "type": "String"
    }
  },
  "resources": [
    {
      "apiVersion": "2023-02-01-preview",
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/1444443e-6757-43e4-9ea4-c8fc705f79a2')]",
      "kind": "Scheduled",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/1444443e-6757-43e4-9ea4-c8fc705f79a2')]",
      "properties": {
        "alertRuleTemplateName": "1444443e-6757-43e4-9ea4-c8fc705f79a2",
        "author": "E.M. Anhaus (originally from Atomic Blue Detections, Endgame), oscd.community",
        "customDetails": null,
        "date": "2019/10/24",
        "description": "Detects the use of the bcdedit command to tamper with the boot configuration data. This technique is often times used by malware or attackers as a destructive way before launching ransomware.",
        "displayName": "Boot Configuration Tampering Via Bcdedit.EXE",
        "enabled": true,
        "entityMappings": null,
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "logsource": {
          "category": "process_creation",
          "product": "windows"
        },
        "modified": "2023/02/15",
        "query": "DeviceProcessEvents\n| where ((ProcessCommandLine contains \"bootstatuspolicy\" and ProcessCommandLine contains \"ignoreallfailures\") or (ProcessCommandLine contains \"recoveryenabled\" and ProcessCommandLine contains \"no\")) and (FolderPath endswith \"\\\\bcdedit.exe\" or ProcessVersionInfoOriginalFileName =~ \"bcdedit.exe\") and ProcessCommandLine contains \"set\"",
        "queryFrequency": "P1D",
        "queryPeriod": "P1D",
        "sentinelEntitiesMappings": null,
        "severity": "high",
        "status": "stable",
        "suppressionDuration": "PT5H",
        "suppressionEnabled": false,
        "tactics": [
          "Impact"
        ],
        "techniques": [
          "T1490"
        ],
        "templateVersion": "1.0.0",
        "triggerOperator": "GreaterThan",
        "triggerThreshold": 0
      },
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules"
    }
  ]
}
