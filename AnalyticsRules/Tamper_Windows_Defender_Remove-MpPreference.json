{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspace": {
      "type": "String"
    }
  },
  "resources": [
    {
      "apiVersion": "2023-02-01-preview",
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/07e3cb2c-0608-410d-be4b-1511cb1a0448')]",
      "kind": "Scheduled",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/07e3cb2c-0608-410d-be4b-1511cb1a0448')]",
      "properties": {
        "alertRuleTemplateName": "07e3cb2c-0608-410d-be4b-1511cb1a0448",
        "author": "Nasreddine Bencherchali (Nextron Systems)",
        "customDetails": null,
        "date": "2022/08/05",
        "description": "Detects attempts to remove Windows Defender configurations using the 'MpPreference' cmdlet",
        "displayName": "Tamper Windows Defender Remove-MpPreference",
        "enabled": true,
        "entityMappings": null,
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "logsource": {
          "category": "process_creation",
          "product": "windows"
        },
        "modified": "",
        "query": "DeviceProcessEvents\n| where ProcessCommandLine contains \"Remove-MpPreference\" and (ProcessCommandLine contains \"-ControlledFolderAccessProtectedFolders \" or ProcessCommandLine contains \"-AttackSurfaceReductionRules_Ids \" or ProcessCommandLine contains \"-AttackSurfaceReductionRules_Actions \" or ProcessCommandLine contains \"-CheckForSignaturesBeforeRunningScan \")",
        "queryFrequency": "P1D",
        "queryPeriod": "P1D",
        "sentinelEntitiesMappings": null,
        "severity": "high",
        "status": "test",
        "suppressionDuration": "PT5H",
        "suppressionEnabled": false,
        "tactics": null,
        "techniques": [
          "t1562"
        ],
        "templateVersion": "1.0.0",
        "triggerThreshold": 0
      },
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules"
    }
  ]
}
