{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspace": {
      "type": "String"
    }
  },
  "resources": [
    {
      "apiVersion": "2023-02-01-preview",
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/ac20ae82-8758-4f38-958e-b44a3140ca88')]",
      "kind": "Scheduled",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/ac20ae82-8758-4f38-958e-b44a3140ca88')]",
      "properties": {
        "alertRuleTemplateName": "ac20ae82-8758-4f38-958e-b44a3140ca88",
        "author": "Nikita Nazarov, oscd.community",
        "customDetails": null,
        "date": "2020/10/08",
        "description": "Detects Obfuscated Powershell via use MSHTA in Scripts",
        "displayName": "Invoke-Obfuscation Via Use MSHTA",
        "enabled": true,
        "entityMappings": null,
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "logsource": {
          "category": "process_creation",
          "product": "windows"
        },
        "modified": "2022/03/08",
        "query": "DeviceProcessEvents\n| where ProcessCommandLine contains \"set\" and ProcessCommandLine contains \"&&\" and ProcessCommandLine contains \"mshta\" and ProcessCommandLine contains \"vbscript:createobject\" and ProcessCommandLine contains \".run\" and ProcessCommandLine contains \"(window.close)\"",
        "queryFrequency": "P1D",
        "queryPeriod": "P1D",
        "sentinelEntitiesMappings": null,
        "severity": "high",
        "status": "test",
        "suppressionDuration": "PT5H",
        "suppressionEnabled": false,
        "tactics": [
          "Execution"
        ],
        "techniques": [
          "T1027",
          "T1059"
        ],
        "templateVersion": "1.0.0",
        "triggerOperator": "GreaterThan",
        "triggerThreshold": 0
      },
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules"
    }
  ]
}
