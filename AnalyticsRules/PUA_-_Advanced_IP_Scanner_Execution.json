{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspace": {
      "type": "String"
    }
  },
  "resources": [
    {
      "apiVersion": "2023-02-01-preview",
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/bef37fa2-f205-4a7b-b484-0759bfd5f86f')]",
      "kind": "Scheduled",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/bef37fa2-f205-4a7b-b484-0759bfd5f86f')]",
      "properties": {
        "alertRuleTemplateName": "bef37fa2-f205-4a7b-b484-0759bfd5f86f",
        "author": "Nasreddine Bencherchali (Nextron Systems), @ROxPinTeddy",
        "customDetails": null,
        "date": "2020/05/12",
        "description": "Detects the use of Advanced IP Scanner. Seems to be a popular tool for ransomware groups.",
        "displayName": "PUA - Advanced IP Scanner Execution",
        "enabled": true,
        "entityMappings": null,
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "logsource": {
          "category": "process_creation",
          "product": "windows"
        },
        "modified": "2023/02/07",
        "query": "DeviceProcessEvents\n| where (ProcessCommandLine contains \"/portable\" and ProcessCommandLine contains \"/lng\") or (FolderPath contains \"\\\\advanced_ip_scanner\" or ProcessVersionInfoOriginalFileName contains \"advanced_ip_scanner\" or ProcessVersionInfoFileDescription contains \"Advanced IP Scanner\")",
        "queryFrequency": "P1D",
        "queryPeriod": "P1D",
        "sentinelEntitiesMappings": null,
        "severity": "medium",
        "status": "test",
        "suppressionDuration": "PT5H",
        "suppressionEnabled": false,
        "tactics": [
          "Discovery"
        ],
        "techniques": [
          "T1046",
          "T1135"
        ],
        "templateVersion": "1.0.0",
        "triggerOperator": "GreaterThan",
        "triggerThreshold": 0
      },
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules"
    }
  ]
}
