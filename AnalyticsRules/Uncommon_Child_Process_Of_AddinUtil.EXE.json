{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspace": {
      "type": "String"
    }
  },
  "resources": [
    {
      "apiVersion": "2023-02-01-preview",
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/b5746143-59d6-4603-8d06-acbd60e166ee')]",
      "kind": "Scheduled",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/b5746143-59d6-4603-8d06-acbd60e166ee')]",
      "properties": {
        "alertRuleTemplateName": "b5746143-59d6-4603-8d06-acbd60e166ee",
        "author": "Michael McKinley (@McKinleyMike), Tony Latteri (@TheLatteri)",
        "customDetails": null,
        "date": "2023/09/18",
        "description": "Detects uncommon child processes of the Add-In deployment cache updating utility (AddInutil.exe) which could be a sign of potential abuse of the binary to proxy execution via a custom Addins.Store payload.\n",
        "displayName": "Uncommon Child Process Of AddinUtil.EXE",
        "enabled": true,
        "entityMappings": null,
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "logsource": {
          "category": "process_creation",
          "product": "windows"
        },
        "modified": "",
        "query": "DeviceProcessEvents\n| where InitiatingProcessFolderPath endswith \"\\\\addinutil.exe\" and (not((FolderPath endswith \":\\\\Windows\\\\System32\\\\conhost.exe\" or FolderPath endswith \":\\\\Windows\\\\System32\\\\werfault.exe\" or FolderPath endswith \":\\\\Windows\\\\SysWOW64\\\\werfault.exe\")))",
        "queryFrequency": "P1D",
        "queryPeriod": "P1D",
        "sentinelEntitiesMappings": null,
        "severity": "medium",
        "status": "experimental",
        "suppressionDuration": "PT5H",
        "suppressionEnabled": false,
        "tactics": null,
        "techniques": [
          "T1218"
        ],
        "templateVersion": "1.0.0",
        "triggerOperator": "GreaterThan",
        "triggerThreshold": 0
      },
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules"
    }
  ]
}
