{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspace": {
      "type": "String"
    }
  },
  "resources": [
    {
      "apiVersion": "2023-02-01-preview",
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/f956c7c1-0f60-4bc5-b7d7-b39ab3c08908')]",
      "kind": "Scheduled",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/f956c7c1-0f60-4bc5-b7d7-b39ab3c08908')]",
      "properties": {
        "alertRuleTemplateName": "f956c7c1-0f60-4bc5-b7d7-b39ab3c08908",
        "author": "frack113",
        "customDetails": null,
        "date": "2022/03/17",
        "description": "Detects execution of PktMon, a tool that captures network packets.",
        "displayName": "PktMon.EXE Execution",
        "enabled": true,
        "entityMappings": null,
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "logsource": {
          "category": "process_creation",
          "product": "windows"
        },
        "modified": "2023/06/23",
        "query": "DeviceProcessEvents\n| where FolderPath endswith \"\\\\pktmon.exe\" or ProcessVersionInfoOriginalFileName =~ \"PktMon.exe\"",
        "queryFrequency": "P1D",
        "queryPeriod": "P1D",
        "sentinelEntitiesMappings": null,
        "severity": "medium",
        "status": "test",
        "suppressionDuration": "PT5H",
        "suppressionEnabled": false,
        "tactics": null,
        "techniques": [
          "T1040"
        ],
        "templateVersion": "1.0.0",
        "triggerOperator": "GreaterThan",
        "triggerThreshold": 0
      },
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules"
    }
  ]
}
