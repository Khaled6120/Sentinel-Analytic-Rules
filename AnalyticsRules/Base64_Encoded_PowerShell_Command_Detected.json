{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspace": {
      "type": "String"
    }
  },
  "resources": [
    {
      "apiVersion": "2023-02-01-preview",
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/e32d4572-9826-4738-b651-95fa63747e8a')]",
      "kind": "NRT",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/e32d4572-9826-4738-b651-95fa63747e8a')]",
      "properties": {
        "alertRuleTemplateName": "e32d4572-9826-4738-b651-95fa63747e8a",
        "author": "Florian Roth (Nextron Systems)",
        "customDetails": null,
        "date": "2020/01/29",
        "description": "Detects usage of the \"FromBase64String\" function in the commandline which is used to decode a base64 encoded string",
        "displayName": "Base64 Encoded PowerShell Command Detected",
        "enabled": true,
        "entityMappings": null,
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "logsource": {
          "category": "process_creation",
          "product": "windows"
        },
        "modified": "2023/01/26",
        "query": "DeviceProcessEvents\n| where ProcessCommandLine contains \"::FromBase64String(\"",
        "queryFrequency": "P1D",
        "queryPeriod": "P1D",
        "sentinelEntitiesMappings": null,
        "severity": "high",
        "status": "test",
        "suppressionDuration": "PT5H",
        "suppressionEnabled": false,
        "tactics": null,
        "techniques": [
          "t1027",
          "t1059",
          "t1140"
        ],
        "templateVersion": "1.0.0",
        "triggerOperator": "GreaterThan",
        "triggerThreshold": 0
      },
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules"
    }
  ]
}
