{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspace": {
      "type": "String"
    }
  },
  "resources": [
    {
      "apiVersion": "2023-02-01-preview",
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/4ae81040-fc1c-4249-bfa3-938d260214d9')]",
      "kind": "NRT",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/4ae81040-fc1c-4249-bfa3-938d260214d9')]",
      "properties": {
        "alertRuleTemplateName": "4ae81040-fc1c-4249-bfa3-938d260214d9",
        "author": "frack113",
        "customDetails": null,
        "date": "2022/07/18",
        "description": "Detect use of icacls to deny access for everyone in Users folder sometimes used to hide malicious files",
        "displayName": "Use Icacls to Hide File to Everyone",
        "enabled": true,
        "entityMappings": null,
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "logsource": {
          "category": "process_creation",
          "product": "windows"
        },
        "modified": "2024/04/29",
        "query": "DeviceProcessEvents\n| where (ProcessCommandLine contains \"/deny\" and ProcessCommandLine contains \"S-1-1-0:\") and (ProcessVersionInfoOriginalFileName =~ \"iCACLS.EXE\" or FolderPath endswith \"\\\\icacls.exe\")",
        "queryFrequency": "P1D",
        "queryPeriod": "P1D",
        "sentinelEntitiesMappings": null,
        "severity": "medium",
        "status": "test",
        "suppressionDuration": "PT5H",
        "suppressionEnabled": false,
        "tactics": null,
        "techniques": [
          "t1564"
        ],
        "templateVersion": "1.0.0",
        "triggerOperator": "GreaterThan",
        "triggerThreshold": 0
      },
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules"
    }
  ]
}
