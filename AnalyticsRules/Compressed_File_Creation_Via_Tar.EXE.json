{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspace": {
      "type": "String"
    }
  },
  "resources": [
    {
      "apiVersion": "2023-02-01-preview",
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/418a3163-3247-4b7b-9933-dcfcb7c52ea9')]",
      "kind": "Scheduled",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/418a3163-3247-4b7b-9933-dcfcb7c52ea9')]",
      "properties": {
        "alertRuleTemplateName": "418a3163-3247-4b7b-9933-dcfcb7c52ea9",
        "author": "Nasreddine Bencherchali (Nextron Systems), AdmU3",
        "customDetails": null,
        "date": "2023/12/19",
        "description": "Detects execution of \"tar.exe\" in order to create a compressed file.\nAdversaries may abuse various utilities to compress or encrypt data before exfiltration.\n",
        "displayName": "Compressed File Creation Via Tar.EXE",
        "enabled": true,
        "entityMappings": null,
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "logsource": {
          "category": "process_creation",
          "product": "windows"
        },
        "modified": "",
        "query": "DeviceProcessEvents\n| where (ProcessCommandLine contains \"-c\" or ProcessCommandLine contains \"-r\" or ProcessCommandLine contains \"-u\") and (FolderPath endswith \"\\\\tar.exe\" or ProcessVersionInfoOriginalFileName =~ \"bsdtar\")",
        "queryFrequency": "P1D",
        "queryPeriod": "P1D",
        "sentinelEntitiesMappings": null,
        "severity": "low",
        "status": "experimental",
        "suppressionDuration": "PT5H",
        "suppressionEnabled": false,
        "tactics": [
          "collection",
          "exfiltration"
        ],
        "techniques": [
          "t1560"
        ],
        "templateVersion": "1.0.0",
        "triggerThreshold": 0
      },
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules"
    }
  ]
}
