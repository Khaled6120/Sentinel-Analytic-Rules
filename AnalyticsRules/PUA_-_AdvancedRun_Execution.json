{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspace": {
      "type": "String"
    }
  },
  "resources": [
    {
      "apiVersion": "2023-02-01-preview",
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/d2b749ee-4225-417e-b20e-a8d2193cbb84')]",
      "kind": "NRT",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/d2b749ee-4225-417e-b20e-a8d2193cbb84')]",
      "properties": {
        "alertRuleTemplateName": "d2b749ee-4225-417e-b20e-a8d2193cbb84",
        "author": "Florian Roth (Nextron Systems)",
        "customDetails": null,
        "date": "2022/01/20",
        "description": "Detects the execution of AdvancedRun utility",
        "displayName": "PUA - AdvancedRun Execution",
        "enabled": true,
        "entityMappings": null,
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "logsource": {
          "category": "process_creation",
          "product": "windows"
        },
        "modified": "2023/02/21",
        "query": "DeviceProcessEvents\n| where ProcessVersionInfoOriginalFileName =~ \"AdvancedRun.exe\" or (ProcessCommandLine contains \" /EXEFilename \" and ProcessCommandLine contains \" /Run\") or (ProcessCommandLine contains \" /WindowState 0\" and ProcessCommandLine contains \" /RunAs \" and ProcessCommandLine contains \" /CommandLine \")",
        "queryFrequency": "P1D",
        "queryPeriod": "P1D",
        "sentinelEntitiesMappings": null,
        "severity": "medium",
        "status": "test",
        "suppressionDuration": "PT5H",
        "suppressionEnabled": false,
        "tactics": [
          "execution"
        ],
        "techniques": [
          "t1059",
          "t1134",
          "t1564"
        ],
        "templateVersion": "1.0.0",
        "triggerOperator": "GreaterThan",
        "triggerThreshold": 0
      },
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules"
    }
  ]
}
