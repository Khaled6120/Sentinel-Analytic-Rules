{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspace": {
      "type": "String"
    }
  },
  "resources": [
    {
      "apiVersion": "2023-02-01-preview",
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/5f699bc5-5446-4a4a-a0b7-5ef2885a3eb4')]",
      "kind": "Scheduled",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/5f699bc5-5446-4a4a-a0b7-5ef2885a3eb4')]",
      "properties": {
        "alertRuleTemplateName": "5f699bc5-5446-4a4a-a0b7-5ef2885a3eb4",
        "author": "Samir Bousseaden",
        "customDetails": null,
        "date": "2019/02/16",
        "description": "Detects svchost hosting RDP termsvcs communicating with the loopback address and on TCP port 3389",
        "displayName": "RDP Over Reverse SSH Tunnel",
        "enabled": true,
        "entityMappings": null,
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "logsource": {
          "category": "network_connection",
          "product": "windows"
        },
        "modified": "2024/03/12",
        "query": "DeviceNetworkEvents\n| where (ipv4_is_in_range(RemoteIP, \"127.0.0.0/8\") or ipv4_is_in_range(RemoteIP, \"::1/128\")) and (InitiatingProcessFolderPath endswith \"\\\\svchost.exe\" and LocalPort == 3389)",
        "queryFrequency": "P1D",
        "queryPeriod": "P1D",
        "sentinelEntitiesMappings": null,
        "severity": "high",
        "status": "test",
        "suppressionDuration": "PT5H",
        "suppressionEnabled": false,
        "tactics": null,
        "techniques": [
          "t1021",
          "t1572"
        ],
        "templateVersion": "1.0.0",
        "triggerThreshold": 0
      },
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules"
    }
  ]
}
