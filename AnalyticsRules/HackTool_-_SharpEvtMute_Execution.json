{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspace": {
      "type": "String"
    }
  },
  "resources": [
    {
      "apiVersion": "2023-02-01-preview",
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/bedfc8ad-d1c7-4e37-a20e-e2b0dbee759c')]",
      "kind": "NRT",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/bedfc8ad-d1c7-4e37-a20e-e2b0dbee759c')]",
      "properties": {
        "alertRuleTemplateName": "bedfc8ad-d1c7-4e37-a20e-e2b0dbee759c",
        "author": "Florian Roth (Nextron Systems)",
        "customDetails": null,
        "date": "2022/09/07",
        "description": "Detects the use of SharpEvtHook, a tool that tampers with the Windows event logs",
        "displayName": "HackTool - SharpEvtMute Execution",
        "enabled": true,
        "entityMappings": null,
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "logsource": {
          "category": "process_creation",
          "product": "windows"
        },
        "modified": "2023/02/14",
        "query": "DeviceProcessEvents\n| where FolderPath endswith \"\\\\SharpEvtMute.exe\" or ProcessVersionInfoFileDescription =~ \"SharpEvtMute\" or (ProcessCommandLine contains \"--Filter \\\"rule \" or ProcessCommandLine contains \"--Encoded --Filter \\\\\\\"\")",
        "queryFrequency": "P1D",
        "queryPeriod": "P1D",
        "sentinelEntitiesMappings": null,
        "severity": "high",
        "status": "test",
        "suppressionDuration": "PT5H",
        "suppressionEnabled": false,
        "tactics": null,
        "techniques": [
          "t1562"
        ],
        "templateVersion": "1.0.0",
        "triggerOperator": "GreaterThan",
        "triggerThreshold": 0
      },
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules"
    }
  ]
}
