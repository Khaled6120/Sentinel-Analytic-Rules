{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspace": {
      "type": "String"
    }
  },
  "resources": [
    {
      "apiVersion": "2023-02-01-preview",
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/0e8cfe08-02c9-4815-a2f8-0d157b7ed33e')]",
      "kind": "Scheduled",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/0e8cfe08-02c9-4815-a2f8-0d157b7ed33e')]",
      "properties": {
        "alertRuleTemplateName": "0e8cfe08-02c9-4815-a2f8-0d157b7ed33e",
        "author": "Sreeman, Florian Roth (Nextron Systems)",
        "customDetails": null,
        "date": "2022/01/04",
        "description": "Detects execution of chromium based browser in headless mode using the \"dump-dom\" command line to download files",
        "displayName": "File Download with Headless Browser",
        "enabled": true,
        "entityMappings": null,
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "logsource": {
          "category": "process_creation",
          "product": "windows"
        },
        "modified": "2023/05/12",
        "query": "DeviceProcessEvents\n| where (ProcessCommandLine contains \"--headless\" and ProcessCommandLine contains \"dump-dom\" and ProcessCommandLine contains \"http\") and (FolderPath endswith \"\\\\brave.exe\" or FolderPath endswith \"\\\\chrome.exe\" or FolderPath endswith \"\\\\msedge.exe\" or FolderPath endswith \"\\\\opera.exe\" or FolderPath endswith \"\\\\vivaldi.exe\")",
        "queryFrequency": "P1D",
        "queryPeriod": "P1D",
        "sentinelEntitiesMappings": null,
        "severity": "high",
        "status": "test",
        "suppressionDuration": "PT5H",
        "suppressionEnabled": false,
        "tactics": null,
        "techniques": [
          "T1105"
        ],
        "templateVersion": "1.0.0",
        "triggerOperator": "GreaterThan",
        "triggerThreshold": 0
      },
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules"
    }
  ]
}
