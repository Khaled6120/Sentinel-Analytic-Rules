{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspace": {
      "type": "String"
    }
  },
  "resources": [
    {
      "apiVersion": "2023-02-01-preview",
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/27aec9c9-dbb0-4939-8422-1742242471d0')]",
      "kind": "Scheduled",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/27aec9c9-dbb0-4939-8422-1742242471d0')]",
      "properties": {
        "alertRuleTemplateName": "27aec9c9-dbb0-4939-8422-1742242471d0",
        "author": "Jonathan Cheong, oscd.community",
        "customDetails": null,
        "date": "2020/10/15",
        "description": "Detects Obfuscated use of Environment Variables to execute PowerShell",
        "displayName": "Invoke-Obfuscation VAR+ Launcher",
        "enabled": true,
        "entityMappings": null,
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "logsource": {
          "category": "process_creation",
          "product": "windows"
        },
        "modified": "2024/04/15",
        "query": "DeviceProcessEvents\n| where ProcessCommandLine matches regex \"cmd.{0,5}(?:/c|/r)(?:\\\\s|)\\\\\"set\\\\s[a-zA-Z]{3,6}.*(?:\\\\{\\\\d\\\\}){1,}\\\\\\\\\\\\\"\\\\s+?\\\\-f(?:.*\\\\)){1,}.*\\\\\"\"",
        "queryFrequency": "P1D",
        "queryPeriod": "P1D",
        "sentinelEntitiesMappings": null,
        "severity": "high",
        "status": "test",
        "suppressionDuration": "PT5H",
        "suppressionEnabled": false,
        "tactics": [
          "execution"
        ],
        "techniques": [
          "T1027",
          "T1059"
        ],
        "templateVersion": "1.0.0",
        "triggerOperator": "GreaterThan",
        "triggerThreshold": 0
      },
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules"
    }
  ]
}
