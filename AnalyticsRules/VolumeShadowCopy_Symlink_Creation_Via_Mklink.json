{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspace": {
      "type": "String"
    }
  },
  "resources": [
    {
      "apiVersion": "2023-02-01-preview",
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/40b19fa6-d835-400c-b301-41f3a2baacaf')]",
      "kind": "NRT",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/40b19fa6-d835-400c-b301-41f3a2baacaf')]",
      "properties": {
        "alertRuleTemplateName": "40b19fa6-d835-400c-b301-41f3a2baacaf",
        "author": "Teymur Kheirkhabarov, oscd.community",
        "customDetails": null,
        "date": "2019/10/22",
        "description": "Shadow Copies storage symbolic link creation using operating systems utilities",
        "displayName": "VolumeShadowCopy Symlink Creation Via Mklink",
        "enabled": true,
        "entityMappings": null,
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "logsource": {
          "category": "process_creation",
          "product": "windows"
        },
        "modified": "2023/03/06",
        "query": "DeviceProcessEvents\n| where ProcessCommandLine contains \"mklink\" and ProcessCommandLine contains \"HarddiskVolumeShadowCopy\"",
        "queryFrequency": "P1D",
        "queryPeriod": "P1D",
        "sentinelEntitiesMappings": null,
        "severity": "high",
        "status": "stable",
        "suppressionDuration": "PT5H",
        "suppressionEnabled": false,
        "tactics": null,
        "techniques": [
          "t1003"
        ],
        "templateVersion": "1.0.0",
        "triggerOperator": "GreaterThan",
        "triggerThreshold": 0
      },
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules"
    }
  ]
}
