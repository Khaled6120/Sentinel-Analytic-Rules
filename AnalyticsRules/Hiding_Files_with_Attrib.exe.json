{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspace": {
      "type": "String"
    }
  },
  "resources": [
    {
      "apiVersion": "2023-02-01-preview",
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/4281cb20-2994-4580-aa63-c8b86d019934')]",
      "kind": "Scheduled",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/4281cb20-2994-4580-aa63-c8b86d019934')]",
      "properties": {
        "alertRuleTemplateName": "4281cb20-2994-4580-aa63-c8b86d019934",
        "author": "Sami Ruohonen",
        "customDetails": null,
        "date": "2019/01/16",
        "description": "Detects usage of attrib.exe to hide files from users.",
        "displayName": "Hiding Files with Attrib.exe",
        "enabled": true,
        "entityMappings": null,
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "logsource": {
          "category": "process_creation",
          "product": "windows"
        },
        "modified": "2023/03/14",
        "query": "DeviceProcessEvents\n| where (ProcessCommandLine contains \" +h \" and (FolderPath endswith \"\\\\attrib.exe\" or ProcessVersionInfoOriginalFileName =~ \"ATTRIB.EXE\")) and (not(ProcessCommandLine contains \"\\\\desktop.ini \")) and (not((ProcessCommandLine =~ \"+R +H +S +A \\\\*.cui\" and InitiatingProcessCommandLine =~ \"C:\\\\WINDOWS\\\\system32\\\\*.bat\" and InitiatingProcessFolderPath endswith \"\\\\cmd.exe\")))",
        "queryFrequency": "P1D",
        "queryPeriod": "P1D",
        "sentinelEntitiesMappings": null,
        "severity": "medium",
        "status": "test",
        "suppressionDuration": "PT5H",
        "suppressionEnabled": false,
        "tactics": null,
        "techniques": [
          "T1564"
        ],
        "templateVersion": "1.0.0",
        "triggerOperator": "GreaterThan",
        "triggerThreshold": 0
      },
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules"
    }
  ]
}
