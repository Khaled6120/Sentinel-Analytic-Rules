{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspace": {
      "type": "String"
    }
  },
  "resources": [
    {
      "apiVersion": "2023-02-01-preview",
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/f7375e28-5c14-432f-b8d1-1db26c832df3')]",
      "kind": "Scheduled",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/f7375e28-5c14-432f-b8d1-1db26c832df3')]",
      "properties": {
        "alertRuleTemplateName": "f7375e28-5c14-432f-b8d1-1db26c832df3",
        "author": "Victor Sergeev, oscd.community",
        "customDetails": null,
        "date": "2020/10/09",
        "description": "Detects potential DLL sideloading using the Microsoft Office winword process via the '/l' flag.",
        "displayName": "Potential Arbitrary DLL Load Using Winword",
        "enabled": true,
        "entityMappings": null,
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "logsource": {
          "category": "process_creation",
          "product": "windows"
        },
        "modified": "2023/03/29",
        "query": "DeviceProcessEvents\n| where (ProcessCommandLine contains \"/l \" and ProcessCommandLine contains \".dll\") and (FolderPath endswith \"\\\\WINWORD.exe\" or ProcessVersionInfoOriginalFileName =~ \"WinWord.exe\")",
        "queryFrequency": "P1D",
        "queryPeriod": "P1D",
        "sentinelEntitiesMappings": null,
        "severity": "medium",
        "status": "test",
        "suppressionDuration": "PT5H",
        "suppressionEnabled": false,
        "tactics": null,
        "techniques": [
          "T1202"
        ],
        "templateVersion": "1.0.0",
        "triggerOperator": "GreaterThan",
        "triggerThreshold": 0
      },
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules"
    }
  ]
}
