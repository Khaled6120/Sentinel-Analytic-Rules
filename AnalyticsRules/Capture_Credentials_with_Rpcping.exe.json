{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspace": {
      "type": "String"
    }
  },
  "resources": [
    {
      "apiVersion": "2023-02-01-preview",
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/93671f99-04eb-4ab4-a161-70d446a84003')]",
      "kind": "Scheduled",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/93671f99-04eb-4ab4-a161-70d446a84003')]",
      "properties": {
        "alertRuleTemplateName": "93671f99-04eb-4ab4-a161-70d446a84003",
        "author": "Julia Fomina, oscd.community",
        "customDetails": null,
        "date": "2020/10/09",
        "description": "Detects using Rpcping.exe to send a RPC test connection to the target server (-s) and force the NTLM hash to be sent in the process.",
        "displayName": "Capture Credentials with Rpcping.exe",
        "enabled": true,
        "entityMappings": null,
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "logsource": {
          "category": "process_creation",
          "product": "windows"
        },
        "modified": "2024/03/13",
        "query": "DeviceProcessEvents\n| where FolderPath endswith \"\\\\rpcping.exe\" and (ProcessCommandLine contains \"-s\" or ProcessCommandLine contains \"/s\") and (((ProcessCommandLine contains \"-u\" or ProcessCommandLine contains \"/u\") and (ProcessCommandLine contains \"NTLM\")) or ((ProcessCommandLine contains \"-t\" or ProcessCommandLine contains \"/t\") and (ProcessCommandLine contains \"ncacn_np\")))",
        "queryFrequency": "P1D",
        "queryPeriod": "P1D",
        "sentinelEntitiesMappings": null,
        "severity": "medium",
        "status": "test",
        "suppressionDuration": "PT5H",
        "suppressionEnabled": false,
        "tactics": null,
        "techniques": [
          "T1003"
        ],
        "templateVersion": "1.0.0",
        "triggerOperator": "GreaterThan",
        "triggerThreshold": 0
      },
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules"
    }
  ]
}
