{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspace": {
      "type": "String"
    }
  },
  "resources": [
    {
      "apiVersion": "2023-02-01-preview",
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/54773c5f-f1cc-4703-9126-2f797d96a69d')]",
      "kind": "Scheduled",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/54773c5f-f1cc-4703-9126-2f797d96a69d')]",
      "properties": {
        "alertRuleTemplateName": "54773c5f-f1cc-4703-9126-2f797d96a69d",
        "author": "Nasreddine Bencherchali (Nextron Systems)",
        "customDetails": null,
        "date": "2021/12/18",
        "description": "Detects the use of Advanced Port Scanner.",
        "displayName": "PUA - Advanced Port Scanner Execution",
        "enabled": true,
        "entityMappings": null,
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "logsource": {
          "category": "process_creation",
          "product": "windows"
        },
        "modified": "2023/02/07",
        "query": "DeviceProcessEvents\n| where (ProcessCommandLine contains \"/portable\" and ProcessCommandLine contains \"/lng\") or (FolderPath contains \"\\\\advanced_port_scanner\" or ProcessVersionInfoOriginalFileName contains \"advanced_port_scanner\" or ProcessVersionInfoFileDescription contains \"Advanced Port Scanner\")",
        "queryFrequency": "P1D",
        "queryPeriod": "P1D",
        "sentinelEntitiesMappings": null,
        "severity": "medium",
        "status": "test",
        "suppressionDuration": "PT5H",
        "suppressionEnabled": false,
        "tactics": [
          "discovery"
        ],
        "techniques": [
          "T1046",
          "T1135"
        ],
        "templateVersion": "1.0.0",
        "triggerOperator": "GreaterThan",
        "triggerThreshold": 0
      },
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules"
    }
  ]
}
